<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juniperbushes_99.hongry.RestaurantDetails_old">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/restImage"
        android:layout_toRightOf="@+id/restImage"
        android:textAlignment="center"
        android:gravity="center|center_vertical|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_heart_icon"
        android:id="@+id/addToFavorites"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="40dp"
        android:textAlignment="center"
        android:baselineAlignBottom="false"
        android:layout_alignTop="@+id/name"
        android:layout_toStartOf="@+id/addToFavorites"
        android:layout_toLeftOf="@+id/addToFavorites"
        android:layout_above="@+id/address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/phone"
        android:layout_below="@+id/ratingImage"
        android:layout_toRightOf="@+id/restImage"
        android:layout_alignRight="@+id/ratingImage"
        android:layout_alignEnd="@+id/ratingImage"
        android:textAlignment="center"
        android:gravity="center|center_vertical|center_horizontal" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/ratingImage"
        android:layout_gravity="left"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/restImage"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/phone"
        android:layout_alignRight="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_above="@+id/addToFavorites"
        android:layout_toRightOf="@+id/restImage"
        android:layout_toEndOf="@+id/restImage"
        android:gravity="center_horizontal" />
</RelativeLayout>
