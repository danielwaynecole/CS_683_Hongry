<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juniperbushes_99.hongry.RecipeDetails">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/recipeImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/title"
        android:layout_toRightOf="@+id/recipeImage"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/recipeImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredients"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RecipeDetailsDetailsButton"
        android:choiceMode="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RecipeDetailsIngredientsButton"
        android:id="@+id/RecipeDetailsIngredientsButton"
        android:layout_above="@+id/ingredients"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/RecipeDetailsDetailsButton"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/RecipeDetailsIngredientsButton"
        android:layout_toEndOf="@+id/RecipeDetailsIngredientsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button6"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/RecipeDetailsDetailsButton"
        android:layout_toEndOf="@+id/RecipeDetailsDetailsButton" />
</RelativeLayout>
