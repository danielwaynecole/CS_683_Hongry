<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juniperbushes_99.hongry" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RestaurantStart"
            android:label="@string/title_activity_restaurant_start" >
        </activity>
        <activity
            android:name=".SearchResturants"
            android:label="@string/title_activity_search_resturants" >
        </activity>
        <activity
            android:name=".ListRestaurants"
            android:label="@string/title_activity_list_restaurants" >
        </activity>
        <activity
            android:name=".RecipeStart"
            android:label="@string/title_activity_recipe_start" >
        </activity>
        <activity
            android:name=".RecipeSearch"
            android:label="@string/title_activity_recipe_search" >
        </activity>
        <activity
            android:name=".SearchRecipes"
            android:label="@string/title_activity_search_recipes" >
        </activity>
        <activity
            android:name=".ListRecipes"
            android:label="@string/title_activity_list_recipes" >
        </activity>
        <activity
            android:name=".RecipeDetails"
            android:label="@string/title_activity_recipe_details" >
        </activity>
    </application>

</manifest>
